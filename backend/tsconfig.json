{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",            // Keep NodeNext for ES module behavior
    "moduleResolution": "NodeNext",
   "rootDir": "./src",         
   "outDir": "./dist",             
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // "allowImportingTsExtensions": true, 
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
